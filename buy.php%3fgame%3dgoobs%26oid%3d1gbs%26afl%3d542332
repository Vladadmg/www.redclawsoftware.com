var CD_product_id = "9800006";
function validateForm(form) {
	var cd_index = 0;
	var cd_count = 0;
	var product_count = 0;
	for (var i = 0; i < form.PRODUCTID.length; i++) {
		form.QUANTITY[i].value = form.CHECKER[i].checked ? "1" : "0";
		var q = parseInt (form.QUANTITY[i].value)
        	if (form.PRODUCTID[i].value == CD_product_id) {
        		cd_count += q;
        		cd_index = i;
        	}
        	else {
        		product_count += q;
        	}
	}

	if (product_count == 0) {
		alert ("You have not selected any games yet! Tick the box for the game/games you wish to buy.")
		return (false);
	}
	else {
		form.submit ();
	}
}

function validateSingle(form) {
	for (var i = 0; i < form.PRODUCTID.length; i++) {
		if (form.PRODUCTID[i].value == CD_product_id) {
			form.QUANTITY[i].value = form.CHECKER.checked ? "1" : "0";	
		}
	}
	form.submit ();
}
